<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
    <%- include('./partials/nav') %> 

    <div class="container mt-3">
        <% blogs.forEach(blog => { %> <!-- Correctly opening the loop -->
            <div class="card" style="width: 18rem; margin-bottom: 20px;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog cover page">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        <% }) %> <!-- Properly closing the loop -->
    </div>

    <%- include('./partials/scripts') %> 
</body>
</html>
